<div class="col-md-12">
  <div class= "btn btn-default pull-right">
<a  data-toggle="modal" data-target="#nsuisuinian-modal">今日碎碎念</a>
  <!-- <%= link_to("今日碎碎念", new_suisuinian_path,calss:"btn btn-primary pull-right") %> -->
  </div>

  <div class="modal fade" id="nsuisuinian-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" role="document">
      <div class="loginmodal-container">
         <h2>新增碎碎念</h2>
         <%= simple_form_for @nsuisuinian do |f| %>
           <div class="form-inputs">
             <%= f.input :title, input_html: { class: "form-control"} %>
             <%= f.input :description, input_html: { class: "form-control"} %>
           </div>
           <div class="form-actions">
             <%= f.button :submit, "提交" %>
           </div>
         <% end %>
      </div>
    </div>
  </div>







  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @suisuinian.each do |suisuinian| %>
        <tr>
          <td>#</td>
          <td><%= link_to(suisuinian.title, suisuinian_path(suisuinian)) %></td>
          <td><%= suisuinian.description %></td>
          <td>
              <%= link_to("Edit", edit_suisuinian_path(suisuinian), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", suisuinian_path(suisuinian),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
